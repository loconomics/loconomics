@* Email with updated information about a Booking Request, mainly to communicate to the
    provider that a request was done (BookingRequestStatusID:2, but also generate content for other statuses)

    Sender e-mail: automated@@loconomics.com
    Sender name: Loconomics
    Subject: Appointment request received
    Send when: immediately
    Restrictions: positions.HIPAA=0
 *@
@using WebMatrix.Data;
@{
    LcMessaging.SecureTemplate();
    
    Layout = "_EmailLayout.cshtml";

    // All the data for this email:
    var info = LcEmailTemplate.GetBookingInfo();

    // NOTE: next commented code is useful when building links like in the 'confirm/deny/cancel booking' buttons, to
    // avoid the users to need to manually log-in in the website (if the app is not triggered):
    // var autologinQueryToAddToUrls = LcAuth.GetAutologinUrlParams(info.Booking.clientID);
    
    // NOTE: For booking requests, we were displaying the info.booking.requestConfirmationLimitDate so clients
    // know when will expire the request and service professionals knows the limit date-time to confirm it;
}
<!-- HEADER -->
<table border="0" cellpadding="0" cellspacing="0" width="100%">
    <tr>
        <td bgcolor="#00989a">
            <!-- HIDDEN PREHEADER TEXT -->
            <div style="display: none; font-size: 1px; color: #fefefe; line-height: 1px; font-family: Helvetica, Arial, sans-serif; max-height: 0px; max-width: 0px; opacity: 0; overflow: hidden;">
                Hi, @(info.client.firstName), Thanks for requesting @(info.serviceProfessional.firstName)&rsquo;'s @info.userJobTitle.jobTitleSingularName services. We will confirm your appointment time as soon as we can.
            </div>
            <div align="center" style="padding: 0px 15px 0px 15px;">
                <table border="0" cellpadding="0" cellspacing="0" width="500" class="wrapper">
                    <!-- LOGO/PREHEADER TEXT -->
                    <tr>
                        <td style="padding: 20px 0px 30px 0px;" class="logo">
                            <table border="0" cellpadding="0" cellspacing="0" width="100%">
                                <tr>
                                    <td bgcolor="#00989a" width="100" align="left"><a href="#" target="_blank"><img alt="Logo" src="@(LcUrl.AppUrl)img/email/@(LcUrl.LangId)/logo-white-large.png" width="120" height="48" style="display: block; font-family: Helvetica, Arial, sans-serif; color: #666666; font-size: 16px;" border="0"></a></td>
                                    <td bgcolor="#00989a" width="400" align="right" class="mobile-hide">
                                        <table border="0" cellpadding="0" cellspacing="0">
                                            <tr>
                                                <td align="right" style="padding: 0 0 5px 0; font-size: 14px; font-family: Arial, sans-serif; color: #FFFFFF; text-decoration: none;"><span style="color: #FFFFFF; text-decoration: none;">Make life better.<br>Build local economies.</span></td>
                                            </tr>
                                        </table>
                                    </td>
                                </tr>
                            </table>
                        </td>
                    </tr>
                </table>
            </div>
        </td>
    </tr>
</table>

<!-- MAIN COPY -->
<!-- ONE COLUMN SECTION -->
<table border="0" cellpadding="0" cellspacing="0" width="100%">
    <tr>
        <td bgcolor="#ffffff" align="center" style="padding: 15px 15px 15px 15px;" class="section-padding">
            <table border="0" cellpadding="0" cellspacing="0" width="500" class="responsive-table">
                <tr>
                    <td>
                        <!-- COPY -->
                        <table width="100%" border="0" cellspacing="0" cellpadding="0">
                            <tr>
                                <td align="left" style="font-size: 24px; text-align: left; font-family: Helvetica, Arial, sans-serif; color: #333333; padding-top: 30px;" class="padding-copy">Hi, @(info.client.firstName),</td>
                            </tr>
                            <tr>
                                <td align="left" style="padding: 20px 0 0 0; text-align: left; font-size: 16px; line-height: 25px; font-family: Helvetica, Arial, sans-serif; color: #666666;" class="padding-copy">Thanks for requesting @(info.serviceProfessional.firstName)&rsquo;'s <strong>@info.userJobTitle.jobTitleSingularName</strong> services. We will confirm your appointment time as soon as we can.</td>
                            </tr>
                            <tr>                               
                                <td align="left" style="padding: 20px 0 0 0; text-align: left; font-size: 16px; line-height: 25px; font-family: Helvetica, Arial, sans-serif; color: #666666;" class="padding-copy">At your service,<br><br>The Loconomics team</td>
                            </tr>
                        </table>
                    </td>
                </tr>
            </table>
        </td>
    </tr>
</table>
<!-- Booking Request Details -->
<table border="0" cellpadding="0" cellspacing="0" width="100%">
    <tr>
        <td bgcolor="#ffffff" align="center" style="padding: 40px 15px 15px 15px;" class="section-padding">
            <table border="0" cellpadding="0" cellspacing="0" width="500" class="responsive-table">
                <tr>
                    <td>
                        <!-- COPY -->
                        <table width="100%" border="0" cellspacing="0" cellpadding="0">
                            <tr>
                                <td align="center"><a href="@(info.viewClientBookingCard)" target="_blank" style="padding: 0 0 0 0; font-size: 30px; font-family: Helvetica, Arial, sans-serif; font-weight: normal; color: #ff6765;" class="padding-copy">Booking Request Details</td>
                            </tr>
                        </table>
                    </td>
                </tr>
            </table>
        </td>
    </tr>
</table>
@RenderPage("MessageComponents/$PricingSummary.cshtml", info)
@RenderPage("MessageComponents/$Services.cshtml", info)
@RenderPage("MessageComponents/$TimesRequested.cshtml", info)
@RenderPage("MessageComponents/$Location.cshtml", info)
@RenderPage("MessageComponents/$PaymentStatus.cshtml", info)
@RenderPage("MessageComponents/$NotesToServiceProfessional.cshtml", info)
@RenderPage("MessageComponents/$CancellationPolicy.cshtml", info)
