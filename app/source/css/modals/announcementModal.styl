/**
    Announcement Modal styles.
    
    The design ask to have close button only at smartphone size, so the
    modal logic includes close on click outside the modal while at smaller
    sizes the modal will fill all the screen.
**/
#announcementModal {
    
    $contentHPad = 30px;
    
    .modal-dialog {
        width: 420px;
    }
    
    .modal-content {
        border-radius: 0;
    }
    
    .modal-header {
        background-color: $brand-primary;
        color: White;
        background-repeat: no-repeat;
        background-position: $contentHPad center;
        background-image: url('../images/logo-loconomics-white-mini.png');
        hr-image('../images/logo-loconomics-white-mini@2x.png', 100px, 38px);
        // Put the image size plus the padding at left of the image plus the same container padding on right
        padding-left: ($contentHPad + 100px + 12px);
        padding-top: 20px;
        padding-bottom: 20px;
        padding-right: 12px;

        .modal-title {
            font-size: 1.3em;
            text-align: center;
            // Title is smaller in height than the background image, set that height
            line-height: 38px;
        }
    }
    
    .modal-body {
        padding: 30px;
    }
    
    .modal-footer {
        padding-top: 0;
        border-top: none;
        text-align: center;
        
        .btn {
            margin: auto;
        }

        #announcementModal-primaryBtn {
            font-size: 1.7em;
            font-weight: normal;
            padding: 6px 25px;
        }
        #announcementModal-secondaryBtn {
            margin: 15px auto 10px;
        }
    }
    
    // No full-screen, no close button
    @media $mediaMinSm {
        .modal-header .close {
            display: none;
        }
        // Adjust position of modal to start under the slogan at home page
        .modal-dialog {
            padding-top: 180px;
        }
    }
    
    @media $mediaMinMd {
        // Adjust position of modal to start under the slogan at home page
        .modal-dialog {
            padding-top: 200px;
        }
    }
    
    // Full screen and close button set-up
    @media $mediaMaxXs {
        .modal-dialog {
            padding: 0;
            margin: 0;
            height: 100%;
            width: auto;
            
            .modal-content {
                border: none;
                border-radius: 0;
                height: 100%;
            }
        }
        
        .modal-header{
            position: relative;

            .close {
                // Adjust position of close button based on modified dialog paddings
                position: absolute;
                top: 0;
                right: 0;
                margin-top: 0;
                margin-right: 0;
                opacity: 0.4;
            }
        }
    }
    
    // At sizes smaller than 420px width, title and logo don't fit in a row
    @media (max-width: 420px) {
        .modal-header {
            // Normal padding plus image height plus padding on bottom with the text
            padding-top: (20px + 38px + 12px);
            // Reset horizontal:
            padding-left: $contentHPad;
            padding-right: $contentHPad;
            background-position: center 20px;
        }
    }
}
