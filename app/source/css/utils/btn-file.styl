/**
    Extenstion to Bootstrap .btn styles to style file input controls
    From: http://www.abeautifulsite.net/whipping-file-inputs-into-shape-with-bootstrap-3/
    Sample HTML:
    <span class="btn btn-default btn-file">
        Browse <input type="file">
    </span>
**/

@import 'styleguideVars.styl';

.btn-file {
    position: relative;
    overflow: hidden;
    cursor: pointer;
}
.btn-file input[type=file] {
    position: absolute;
    top: 0;
    right: 0;
    min-width: 100%;
    min-height: 100%;
    font-size: 100px;
    text-align: right;
    opacity: 0;
    outline: none;
    background: white;
    cursor: inherit;
    display: block;
}
/**
    Fake focus class required to emulate focus in the button when this
    is moved to the actual input element; because the input is not visible,
    the ':focus' styles needs to be applied to our fake button
 */
.btn-file.is-focused {
    outline: $focusOutline;
}
