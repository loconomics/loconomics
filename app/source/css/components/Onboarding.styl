/**
    A component for styles specific to onboarding.
**/

.OnboardingTip {
  color: white;
  background-color: $brand-primary;
}
.OnboardingStepTitle {
  font-size: 20px;
  font-weight: 700;
  margin-left: 10px;
  margin-bottom: 10px;
}
.OnboardingProgressBar {
  text-align: left;
  padding-left: 5px;
  @media $mediaMinSm {
      text-align: center;
      padding-left: 0px;
  }
  a {
    color: $brand-secondary;
    font-size: 14px;
    position: absolute;
    // Aligned vertically with the progress icons, taking care of this font-size and icons size:
    top: 2px;
    right: 5px;
    text-align: right;
  }
}