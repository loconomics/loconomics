/**
    IconList components for display of lists with icons
**/

/**
    List style for a simple enumeration preceded by an icon

    Scheme:
    .IconList (ul or ol element)
      li
        i (an icon class is expected to be used)
        p (text content)
**/
.IconList {
    padding: 0;
    margin: 10px auto;
    display: inline-block;

    li {
        height: 55px;
        display: table;

        i {
            display: table-cell;
            width 40px;
            font-size: 24px;
            text-align: center;
            vertical-align: middle;

            &.fa {
                font-size: 20px;
            }
        }

        p {
            display: table-cell;
            vertical-align: middle;
            text-align: left;
        }
    }
}

/**
    Card style with optional header
    and button-like element at bottom, wrapping an IconList element.

    Scheme:
    .IconListCard (usually a div element)
      .IconList (ul or ol element)
        li
      .btn (a or button element)
**/
.IconListCard {
    list-style: none;
    background-color: #fff;
    padding: 15px;
    box-shadow: 0 1.5px 0 0 rgba(0,0,0,.1);
    margin-top: 0;
    margin-bottom: 10px;
}

