/**
    LightForm style.
    
    It's just the common styles followed by 'all a form activities',
    may apply to any element (not just a 'form' element), but an activity or top-level '.container'
    is the best because of the background (or using a '.row' element so background fills all the width),
    and will change the standard appearance of other components, like SectionTitle's
    
    To receive custom styles, form elements must have a 'form-control' class (like Bootstrap).
**/
.LightForm {
    background: $gray-background;
    padding-bottom: 15px;
    
    .SectionTitle {
//        text-transform: none;
//        text-align: center;
//        font-weight: bold;
//        margin-top: 15px;
//        margin-bottom: 12px;
          @media $mediaMinMd {
            margin-bottom: 12px;
          }
    }
    
    // The toolbar, usually at the bottom and only one primary button,
    // that holds the main form buttons (submit/save, remove, quick without save).
    .LightForm-submitBar {
        margin-top: 25px;
        margin-bottom: 25px;
        margin-right: auto;
        margin-left: auto;
    }
    
    // Container for a one line button/link that triggers a tool.
    // It adds some gap around on both axis, so can hold a btn-block
    // without take all the width an appear a submitBar and being separated
    // vertically too
    .LightForm-tool {
        margin: 25px 40px;
    }
    
    textarea.form-control {
        resize: vertical;
    }
    
    // All form controls are white background
    .form-control {
        background: White;
    }
    .LightForm-Section {
        margin: 15px;
    }
    .control-labelDescription {
        color: $gray-light;
    }
    .StarsRating-icons {
        font-size: 2.4em;
        line-height: 1;
        color: #767676;
        display: inline-block;
        position: relative;
        i {
            width: .75em;
        }
    }
    > * .form-inline,
        .form-control{
            display: block;
            width: 100%;
    }
    > * .Select {
            position: relative;
            display: inline-block;
            vertical-align: bottom;
            select {
                padding-top: 8px;
                padding-bottom: 8px;
                padding-right: 2em;
                -webkit-appearance: none;
                background: white\0 !important;
                display: block;
                padding: 8px 10px;
                width: 100%;
                -webkit-transition: border-color 0.2s;
                -moz-transition: border-color 0.2s;
                -o-transition: border-color 0.2s;
                transition: border-color 0.2s;
                border: 1px solid #c4c4c4;
                -webkit-border-radius: 2px;
                -moz-border-radius: 2px;
                border-radius: 2px;
                background-color: #fff;
                color: #484848;
                border: 1px solid #c4c4c4;
                -webkit-border-radius: 2px;
                -moz-border-radius: 2px;
                border-radius: 2px;
                background-color: #fff;
                color: #484848;
            }

    }
    > * .Select:before {
            content: '\25bc';
            position: absolute;
            pointer-events: none;
            color: #767676;
            top: 0;
            bottom: 1px;
            padding-top: 0.7em;
            line-height: 1;
            right: 0;
            width: 2em;
            text-align: center;
            transform: scale(0.84, 0.42);
            -webkit-transform: scale(0.84, 0.42);
    }
    >* .Select-block {
        display: block;
        width: 100%;
//        @media $mediaMinMd {
//          display: inline-block;
//          width: auto;
//        }
    }
}
