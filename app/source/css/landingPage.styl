/*
    Stylesheet for any landingPage.
    Ideally, just generating one file from the landing stylesheet
    would contain any import needed, and not shared with others,
    but for now are few the changes and no much overload
    plus some refactors needed here (maybe just 'app.styl')
*/
/* core */
@import "nib"
@import 'utils/mediaQueries.styl'
@import 'utils/styleguideVars.styl'
@import 'utils/bs-extensions.styl'
@import 'utils/input-group-addon-inset.styl';
@import 'utils/arrows.styl';

/** Utilities styles **/
@import 'utils/isolated.styl'

/** Components styles **/
@import 'components/ActionSheet.styl'
@import 'components/SignupLogin.styl'
@import 'components/LargeNavBar.styl'
@import 'components/Press.styl'
@import 'components/Testimonials.styl'

@import '../../vendor/bootstrap/styl/mixins/image.styl'
@import '../../vendor/bootstrap/styl/scaffolding.styl'
@import '../../vendor/bootstrap/styl/carousel.styl'

/** Pages **/
//** e.g., @import 'landingPages/dog-care-professionals.styl' **/

/** App contains some general changes that may be needed**/
/* TODO Ideally this will be shared utilities or components,
 and no forcing the class App on the top */
@import 'components/App.styl'

.App > body {
    // No navbar
    padding-top: 0 !important;
}

.LandingPage {

    // NO NAVBAR, disabled on the JS activity, so this can replace the default:
    top: 0 !important;

    // NOTE: all activities are absolute positioned, so is already a positioning context

    [role=main] {

        .landingpage-brand {
            display: block;
            width: 100%;
            height: 100px;
            background: no-repeat;
            background-image: url('../images/logo-white-large.png');
            background-image: 
              linear-gradient(transparent, transparent),
              url('../images/logo-white.svg');
            background-size: 200px;
            margin: 20px $grid-gap;
            @media $mediaMaxSm {
                background-position: center;
                margin: 0px; 20px;
                height: 50px;
                background-size: 100px;
            }
        }
        
        .landingpage-copy {
            margin-bottom: 30px;
            padding: 30px; 0px; 30px; 30px;
            background: rgba(0, 152, 154, 0.75); 

            @media $mediaMaxSm {
                margin-bottom: 0;
                margin-top: 0;
                background: none;
            }

            @media $mediaMaxXs {
                padding: 15px;
            }
        }
        .landingpage-copyBackground {
            background: none;            
            @media $mediaMaxSm {
                padding: 20px; 0px; 0px; 0px;
                background: rgba(0, 152, 154, 0.75);   
                margin-top: 10px;
                h1 {
                    margin-top:0px;
                    font-size:21px;
                }
            }                     
        }
        .landingpage-background {
            padding-top: 30px;
            background: no-repeat center / cover;
            background-image:
              url('../images/golden-gate-bridge-388917_1920.jpg');
            -webkit-background-size: cover;
            -moz-background-size: cover;
            -o-background-size: cover;
            background-size: cover;
            @media $mediaMaxSm {
                padding-top: 0px;
            }
          }
        .landingpage-
        .landingpage-title {
            color: white;
            font-size: 38px;
            font-weight: bold;
            text-align: left;
            @media $mediaMaxSm {
                font-size: 24px;
            }
        }
        .landingpage-tagline {
            color: white;
            font-size: 24px;
            text-align: left;
            @media $mediaMaxSm {
                font-size: 16px;
            }
        }
        .landingpage-proposition {
            color: white;
            font-size: 18px;
            text-align: left;
            display: block;
            .fa,
            p {
                display: inline-block;
                margin-right: 5px;
                font-size: 22px;
                @media $mediaMaxSm {
                    font-size: 16px;
                }
            }
        }


        // Edge limit for phone
        .landingpage-title,
        .landingpage-tagline,
        .landingpage-proposition{
            padding: 0 $grid-gap;
        }
        .SignupLogin {
            h2 {
                text-align: center;
            }

            #job-title-selection {
                margin: 10px;
                button {
                    padding: 5px;
                    margin: 2px;
                    border-width: 2px;
                    font-weight: 600;
                }
            }
            .LeadContent {
                background: rgba(255, 255, 255, .85);
                margin-top: 0;
            }
        }
        form {
            margin: 0 auto 40px;
            max-width: 450px;

            .form-control {
                background: White;
                font-size: 17px;
            }

            .form-control:focus {
              border-bottom-color: #ccc;
              border-top-color: transparent;
              border-right-color: transparent;
            }

            // Reduce column gaps by a 20px in total
            // for sizes bigger than XS (so keep standar in phone where
            // forms goes vertical)
            @media $mediaMinSm {
                > * {
                    padding-left: 10px;
                    padding-right: 10px;
                }
            }
        }

        // How the Cooperative Works section
        .landingpage-hiw {
            text-align: center;
            color: white;
            background: $brand-secondary;
            padding-top: 40px;
            $iconsSize = 90px;
            .landingpage-title {
              color: white;
              text-align: center;
            }
            ul {
                margin-top: ($iconsSize / 2) + 18px;
                margin-bottom: 0;
                padding-bottom: ($iconsSize / 2);

                @media (max-width: 520px) {
                    margin-top: 0px;
                }
                > li {
                  margin-top: (0 - $iconsSize / 2);
                  @media (max-width: 520px) {
                    margin-top: 30px;
                  }
                  @media $mediaMaxXs {
                      margin-top: 0px;
                  }
                }
            }
            @media (max-width: 520px) {
                    margin: 0 $grid-gap;
            }
            h3 {
                font-weight: bold;
                font-size: 22px;
            }
            // icons
            i {
                background: $brand-secondary;
                border: 2px solid white;
                font-size: floor($iconsSize / 1.60);
                border-radius: 50%;
                width: $iconsSize;
                height: $iconsSize;
                line-height: $iconsSize;
                color: white;
            }
        }
    }
}

